---
// @ts-nocheck
const { features } = Astro.props;
---

<section id="features" class="py-20 bg-space-cadet-lighter text-color">
    <div class="container mx-auto">
        <h2 class="text-4xl font-bold text-center mb-12">Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {features.map(feature => (
                    <div class="flex flex-col items-center text-center p-6 bg-neutral-800 rounded-lg shadow-lg relative">
                        <div class="mb-4 text-6xl">{feature.icon}</div>
                        <h3 class="text-2xl font-bold mb-2">{feature.title}</h3>
                        <p class="text-lg mb-4 pb-4">{feature.description}</p>
                        {feature.additionalText && (
                                <div class={`absolute bottom-0 left-0 right-0 py-2 font-bold rounded-b-lg ${feature.color}`}>
                                    {feature.additionalText}
                                </div>
                        )}
                    </div>
            ))}
        </div>
    </div>
</section>

<style>
    .text-color {
        color: rgb(230, 230, 230);
    }
    h2, h3, p, div {
        font-family: 'Gabarito', sans-serif;
    }
</style>
