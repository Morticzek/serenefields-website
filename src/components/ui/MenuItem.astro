---
const { content, logo } = Astro.props;

import HomeLogo from "@/components/symbols/HomeLogo.astro";
import StoreAltLogo from "@/components/symbols/StoreAltLogo.astro";
import StoreLogo from "@/components/symbols/StoreLogo.astro";
import DiscordLogo from "@/components/symbols/DiscordLogo.astro";
import Chevron from "@/components/symbols/Chevron.astro";

const symbols = {
    Chevron,
    StoreLogo,
    StoreAltLogo,
    DiscordLogo,
    HomeLogo
}

const LogoSymbol = symbols[logo];

---
<div class="flex items-center justify-center">
    {
        logo && (
                    <span slot="logo"><LogoSymbol/></span>
        )
    }
    <span class="ml-2">{content}</span>
</div>

<style>
    span {
        font-family: 'Gabarito', sans-serif;
        font-weight: 500;
        font-size: 1rem;
        color: rgb(230, 230, 230)
    }

</style>
