---
const { text, placement } = Astro.props;
---
<div class="flex justify-center items-center container mt-12">
    <div class="container p-0 flex justify-center items-center bg-gradient-to-r from-amber-500 to-yellow-300 transform hover:scale-105 transition duration-300 ease-in-out hover:bg-gradient-to-r hover:from-sky-500 hover:to-violet-400 rounded-xl">
        <div class="flex w-full tab-noise-irongrip overflow-hidden">
            {
                placement === 'left' && (
                            <h2 class="pl-12 text-left w-full ml-12 text-4xl xl:text-7xl font-bold my-10 bg-clip-text text-transparent bg-gradient-to-r from-neutral-800 to-neutral-900">{text}</h2>
                )
            }
            {
                placement === 'right' && (
                            <h2 class="pr-24 text-right w-full ml-12 text-4xl xl:text-7xl font-bold my-10 bg-clip-text text-transparent bg-gradient-to-r from-neutral-800 to-neutral-900">{text}</h2>
                )
            }
            {
                placement === 'center' && (
                            <h2 class="text-center w-full ml-12 text-4xl xl:text-7xl font-bold my-10 bg-clip-text text-transparent bg-gradient-to-r from-neutral-800 to-neutral-900">{text}</h2>
                )
            }
        </div>
    </div>
</div>

<style>
    .tab-noise-irongrip {
        background: url('../../assets/image/iron-grip.png');
    }

    h2 {
        font-family: 'Gabarito', sans-serif;
        font-weight: 800;
    }

    .shift-anim:hover {
        background: linear-gradient(270deg, paleturquoise, royalblue);
    }
</style>
