---
import '@/assets/styles/globals.css';
import '@/assets/styles/tailwind.css';
import MainLayout from "../layouts/MainLayout.astro";
import Features from "../components/features/home/HomeFeatures.astro";
import SwipingCarousel from "../components/core/carousel/SwipingCarousel";

import img1 from "@/assets/image/carousel/img1.webp?url";
import img2 from "@/assets/image/carousel/img2.webp?url";
import img3 from "@/assets/image/carousel/img3.webp?url";

const items = [
	{
		image: img1,
		text: "Unique farming experience...",
	},
	{
		image: img2,
		text: "Engaging storyline...",
	},
	{
		image: img3,
		text: "And many more...",
	},
];

const features = [
	{
		icon: "🌾",
		title: "Custom Crops and Plants",
		description: "Grow unique crops and plants with special properties and uses, adding depth to your farming experience.",
	},
	{
		icon: "🗺️",
		title: "Unique Quests and Adventures",
		description: "Embark on quests and adventures that challenge your farming and survival skills, with unique rewards and storylines.",
	},
	{
		icon: "⛏️",
		title: "Mining and Resource Gathering",
		description: "Delve deep into the earth to mine ores, gather resources, and discover hidden caves and dungeons.",
	},
	{
		icon: "🦴",
		title: "Archaeology",
		description: "Uncover ancient artifacts and fossils buried beneath the soil, revealing the history of SereneFields.",
	},
	{
		icon: "🐠",
		title: "Fishing and Aquaculture",
		description: "Explore the waters around SereneFields to catch fish, gather resources, and discover hidden treasures.",
		color: "bg-purple-600",
		additionalText: "Now available in Beta!"
	},
	{
		icon: "🍲",
		title: "Cooking and Brewing",
		description: "Craft delicious meals and beverages using ingredients from your farm and the world around you.",
		color: "bg-yellow-600",
		additionalText: "Coming Soon!"
	},
	{
		icon: "🎉",
		title: "Seasonal Events and Festivals",
		description: "Participate in seasonal events and festivals that bring the community together with themed activities and rewards.",
		color: "bg-yellow-600",
		additionalText: "Coming Soon!"
	},
	{
		icon: "🐄",
		title: "Animal Husbandry",
		description: "Raise and care for a variety of animals, from chickens to cows, each with their own benefits and products.",
		color: "bg-yellow-600",
		additionalText: "Coming Soon!"
	},
	{
		icon: "👩‍🌾👨‍🌾",
		title: "Cooperative Farming",
		description: "Team up with friends to manage farms, share resources, and complete farming tasks more efficiently.",
		color: "bg-yellow-600",
		additionalText: "Coming Soon!"
	}
];
---
<MainLayout class="min-h-screen">
	<p class="flex text-4xl lg:text-7xl justify-center items-center text-center container mt-12">
		Welcome to SereneFields!
	</p>
	<div class="flex justify-center items-center p-0 mt-12">
		<!--<HeroSectionCarousel client:load/>-->
		<SwipingCarousel items={items} client:load/>
	</div>
	<p class="flex text-3xl smaller-font justify-center items-center container mt-12">

	</p>
	<!--<div class="flex justify-center items-center mt-12 container">-->
	<!--	<Image src={heroImage} alt="Test" class="h-fit rounded-xl border-2"/>-->
	<!--</div>-->
	<Features features={features}/>
</MainLayout>

<style>
	p {
		font-family: 'Gabarito', sans-serif;
		font-weight: 700;
		color: rgb(230, 230, 230)
	}
	.smaller-font {
		font-family: 'Gabarito', sans-serif;
		font-weight: 400;

	}
	.thick-font {
		font-family: 'Gabarito', sans-serif;
		font-weight: 900;
	}
	.tab-noise-irongrip {
		background: url('../assets/image/iron-grip.png');
	}

	.tab-noise-asfalt {
		background: url('../assets/image/cutcube.png');
	}

</style>
